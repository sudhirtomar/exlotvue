<p id="notice"><%= notice %></p>

<h1>User Images</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_images.each do |user_image| %>
      <tr>
        <td><%= user_image.title %></td>
        <td><%= user_image.description %></td>
        <td><%= image_tag(user_image.image.url) if user_image.image.exists? %></td>
        <td><%= user_image.user_id %></td>
        <td><%= link_to 'Show', user_image %></td>
        <td><%= link_to 'Edit', edit_user_image_path(user_image) %></td>
        <td><%= link_to 'Destroy', user_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Image', new_user_image_path %>
